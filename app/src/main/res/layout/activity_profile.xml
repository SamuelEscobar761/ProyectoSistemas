<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/action_bar_background">

    <ImageView
        android:id="@+id/viejitoImage"
        android:layout_width="261dp"
        android:layout_height="258dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/oldman" />

    <TextView
        android:id="@+id/nombreText"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/item_button_shape"
        android:ems="10"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/emailTextInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viejitoImage" />

    <TextView
        android:id="@+id/emailTextInfo"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/item_button_shape"
        android:ems="10"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreText" />
</androidx.constraintlayout.widget.ConstraintLayout>